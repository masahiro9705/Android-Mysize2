<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/inseam"
            app:layout_constraintStart_toStartOf="@+id/droidImage" android:layout_marginStart="8dp" android:hint="股下"
            android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="@+id/droidImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/droidImage"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/sleeve"
            android:hint="裄丈"
            android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="@+id/droidImage"
            app:layout_constraintBottom_toBottomOf="@+id/droidImage"
            app:layout_constraintStart_toEndOf="@+id/droidImage" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/neck"
            android:hint="首回り"
            android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/droidImage" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/droidImage"/>
    <ImageView
            android:layout_width="170dp"
            android:layout_height="200dp" app:srcCompat="@drawable/ic_mysize"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/droidImage" app:layout_constraintVertical_bias="0.3"/>
    <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/waist"
            android:hint="胴回り"
            android:textAlignment="center" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/droidImage"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/droidImage"/>
    <Button
            android:text="保存"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_height"
            android:id="@+id/heightButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="25dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>